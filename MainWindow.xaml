<Window x:Class="RandomColorGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomColorGenerator"
        mc:Ignorable="d"
        Title="Random Color Generator"
        MinHeight="400" MinWidth="400"
        Height="600" Width="600">
    <Window.Resources>
        <ControlTemplate x:Key="NoBackgroundOnMouseOver" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter
                    HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
        </ControlTemplate>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#99FFFFFF" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </Window.Resources>

    <Grid>
        <Rectangle
            x:Name="ColorArea"
            Fill="#FF000000" />

        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                CornerRadius="5" BorderThickness="2" BorderBrush="#D83E3E3E"
                Background="#993E3E3E" Width="300">

                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D83E3E3E" />
                                <Setter Property="BorderBrush" Value="#99FFFFFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Button
                    x:Name="GenerateNewColorsButton" Grid.Row="0"
                    Template="{StaticResource NoBackgroundOnMouseOver}"
                    Width="300" Height="60" Content="Generate"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Foreground="#99FFFFFF" Background="Transparent"
                    FontSize="26" BorderBrush="Transparent"
                    Click="GenerateNewColorsButton_Click" />

            </Border>

            <Border
                Grid.Row="1" Width="300"
                CornerRadius="5"
                Margin="0, 10, 0, 0"
                Background="#995A5A5A">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock
                        x:Name="HexText"
                        Text="#000000" />

                    <TextBlock
                        x:Name="RgbText"
                        Text="rgb(0, 0, 0)" />

                    <TextBlock
                        x:Name="HslText"
                        Text="hsl(0º, 0%, 0%)" />

                    <TextBlock
                        x:Name="HsvText"
                        Text="hsv(0º, 0%, 0%)" />

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
